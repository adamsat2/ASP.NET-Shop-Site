@model ShoppingCartApp.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="text-danger">Delete Product</h1>
<h3>Are you sure you want to delete this?</h3>

<div class="mb-3">
    <div class="mb-2">
        <img id="preview" src="@Model.ProductImage" alt="product image" style="max-width: 250px; height: auto; border: 1px solid #ddd; display: block;" />
    </div>
</div>

<div>
    <div class="mb-3">
        <label>Product Name</label>
        <input asp-for="Name" class="form-control" readonly style="background-color: #e9ecef;" />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" readonly style="background-color: #e9ecef;" />
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2" style="background-color: #6c757d; border: none;">Back to List</a>
        </div>
    </form>
</div>