@model ShoppingCartApp.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<div class="mb-3">
    <div class="mb-2">
        <img id="preview" src="#" alt="image preview" style="max-width: 250px; height: auto; border: 1px solid #ddd; display: block;" />
    </div>
</div>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label>Product Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label asp-for="ProductImage" class="control-label">Upload Image</label>
        <input type="file" name="imageFile" id="imageInput" class="form-control-file" onchange="previewImage(this)" />
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2" style="background-color: #6c757d; border: none;">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function previewImage(input) {
            var preview = document.getElementById('preview');
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = "#";
            }
        }
    </script>
}