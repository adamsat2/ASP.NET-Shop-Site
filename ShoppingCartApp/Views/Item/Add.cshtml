@model ShoppingCartApp.Models.Item
@{
    ViewData["Title"] = "Add Item to Cart";
}

<h1>Add Item to Cart</h1>

<form asp-action="Add" method="post" class="mt-4">
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Price" />

    <div class="mb-3">
        <label>Product Name</label>
        <input asp-for="Name" class="form-control" readonly style="background-color: #e9ecef;" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" readonly style="background-color: #e9ecef;" />
    </div>

    <div class="mb-3">
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="d-flex align-items-center mt-4">
        <button type="submit" class="btn btn-primary py-2">Add to Cart</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2 py-2" 
           style="background-color: #6c757d; border: none; display: inline-block;">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}